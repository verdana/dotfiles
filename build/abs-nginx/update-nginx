#!/bin/sh

JA=/srv/http

# 关闭 nginx
pkill nginx

# 复制 nginx 的文件
rm /etc/nginx/nginx.conf
cp -arfL /etc/nginx/*           $JA/etc/nginx
cp -arfL /usr/bin/nginx         $JA/usr/bin
cp -arfL /usr/share/nginx/*     $JA/usr/share/nginx

cp /lib/ld-linux-x86-64.so.2    $JA/lib
cp /lib/libnss_*                $JA/lib

cp $(ldd /bin/nginx | grep /usr/lib | sed -sre 's/(.+)(\/usr\/lib\/\S+).+/\2/g') $JA/lib

